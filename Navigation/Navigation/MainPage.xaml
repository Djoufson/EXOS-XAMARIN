<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Navigation.MainPage">

    <StackLayout
        HorizontalOptions="CenterAndExpand"
        VerticalOptions="CenterAndExpand">
        <Label
            Text="Hello"
            HorizontalTextAlignment="Center"/>
        <Button
            Text="Hierarchical Navigation"
            Clicked="Hierarchical_Navigation_Clicked"/>
        <Button
            Text="Modal Navigation"
            Clicked="Modal_Navigation_Clicked"/>
        <Button
            Text="Details Navigation"
            Clicked="Details_Navigation_Clicked"/>
        <Button
            Text="Tabbed Navigation"
            Clicked="Tabbed_Navigation_Clicked"/>
        <Button
            Text="Instagram Exercise"
            Clicked="LoadInstagram"/>
    </StackLayout>

</ContentPage>
