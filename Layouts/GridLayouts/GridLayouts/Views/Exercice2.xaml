<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="GridLayouts.Views.Exercice2">
    <ContentPage.Content>
        <Grid
            BackgroundColor="#127ac7"
            Padding="20"
            RowDefinitions="*, 40, 40">
            <StackLayout
                Grid.Row="0"
                VerticalOptions="CenterAndExpand"
                HorizontalOptions="CenterAndExpand">
                <Label
                    Text="Welcome to Xamarin"
                    FontSize="30"
                    FontAttributes="Bold"/>
                <Label
                    Text="Cross-platform apps made easy"
                    HorizontalOptions="CenterAndExpand"
                    FontSize="18"/>
            </StackLayout>
            <Button
                Grid.Row="1"
                CornerRadius="5"
                Background="#1dabf0"
                Text="Login"/>
            <Button
                CornerRadius="5"
                Grid.Row="2"
                BackgroundColor="#1dabf0"
                Text="Register"/>
        </Grid>
    </ContentPage.Content>
</ContentPage>